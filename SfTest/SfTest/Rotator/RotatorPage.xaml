    xmlns:rotator="clr-namespace:Syncfusion.SfRotator.XForms;assembly=Syncfusion.SfRotator.XForms">
    <ContentPage.Content>
        <Grid>
            <rotator:SfRotator
                x:Name="rotator"
                BackgroundColor="Green"
                HeightRequest="160"
                NavigationDirection="Horizontal" />
        </Grid>
    </ContentPage.Content>
</ContentPage>